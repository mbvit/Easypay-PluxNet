# Application Configuration
APP_NAME="EasyPay PluxNet"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
# IMPORTANT: Set this to your actual domain when using Nginx Proxy Manager
# Example: APP_URL=https://easypay.pluxnet.co.za
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (SQLite)
DB_CONNECTION=sqlite
# For Docker: Use /var/www/database/database.sqlite (container path)
# For local dev: Use full path like /home/user/project/database/database.sqlite
# Note: Docker Compose automatically overrides this to the correct container path
DB_DATABASE=/var/www/database/database.sqlite

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

# Queue (Database - Sync for simplicity in production)
QUEUE_CONNECTION=sync

# Broadcasting & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Mail (Configure for production SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# EasyPay Service Configuration
EASYPAY_RECIEVERID=1234
EASYPAY_TOTAL_CHARACTER_LENGTH=12

# Splynx API Configuration
SPLYNXAPI_HOST_URL=https://your-splynx-instance.com
SPLYNXAPI_KEY=your-api-key-here
SPLYNXAPI_SECRET=your-api-secret-here

# Octane Configuration (for FrankenPHP)
OCTANE_SERVER=frankenphp
OCTANE_HTTPS=false
